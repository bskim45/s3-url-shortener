# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2
max_line_length = 119

[{*.yaml,*.yml}]
indent_size = 2

[*.{md,txt}]
indent_size = 2

[Makefile]
indent_style = tab
